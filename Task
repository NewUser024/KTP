col_math = [[sg.Text(data_math_tasks['questions']['question1'], key = 'quest')],
        [sg.Input(key = 'answer')],
        [sg.Button('Submit', font = (20), size = (20, 3))]]
col_fizik = [[sg.Text(data_fizik_tasks['questions']["question1"], key = "quest")],
        [sg.Input(key = "answer")],
        [sg.Button('Submit', font = (20), size = (20, 3))]]

layout_math = [col_math]
layout_fizik = [col_fizik]
layout_mova = [[sg.Text("Задач з мови неіснує, або наразі недоступні.")]]

windowTasks = sg.Window('Tasks', layout_math,  size = (600, 400))
windowTasksFizik = sg.Window("Tasks", layout_fizik, size = (600, 400))
windowTasksMova = sg.Window("Error", layout_mova)
n = 1
s = 0

from nav4 import event

while True:
    if event == "Задачі з математики":
        event_task, values_task = windowTasks.read()
        if event_task == 'Submit':
            values_task[n] = windowTasks["answer"].get()
            if values_task[n] == data_math_tasks['answers']["answer" + str(n)]:
                s = s + 1
            windowTasks["answer"].Update("")
            n = n + 1
            if n == 11:
                break
            else:
                windowTasks["quest"].Update(data_math_tasks['questions']['question' + str(n)])
    
    if event == "Задачі з фізики":
        event_task, values_task = windowTasksFizik.read()
        if event_task == "Submit":
            values_task[n] = windowTasksFizik["answer"].get()
            if values_task[n] == data_fizik_tasks["answers"]["answer" + str(n)]:
                s = s + 1
            windowTasksFizik["answer"].Update("")
            n = n + 1
            if n == 11:
                break
            else:
                windowTasksFizik["quest"].Update(data_fizik_tasks["questions"]["question" + str(n)])
    if event == "Задачі з Укр.мови":
        event, values = windowTasksMova.read()
    if event == sg.WIN_CLOSED:
        break
    if event_task == sg.WIN_CLOSED:
        print (s)
        layout_res = [[sg.Text("Кількість правильних відповідей: " + str(s), font = (15))]]
        windowResult = sg.Window("Result", layout_res, size = (500, 150))
        event_res = windowResult.read()
        if event_res == sg.WIN_CLOSED:
            break
        break
windowTasks.close()
windowTasksFizik.close()
windowTasksMova.close()
